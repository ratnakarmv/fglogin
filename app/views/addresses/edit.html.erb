<% content_for :head do %>
<style>
.form-control{
    height: 50px; padding: 6px 12px;
}
</style>
<% end %>


<%= form_for @address, url: address_path(@address), method: :patch do |f| %>
<% if @address.errors.any? %>
  <ul>
    <% @address.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="col-md-8 col-md-offset-2">
  <div class="col-md-12">
    <h3 class>delivery address</h3>
  </div>
  <div class="col-md-6">
    <%= f.text_field :first_name, {class: "form-control", placeholder: "First Name"} %>
   <!-- <input type="text" class="form-control" placeholder="First Name" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"  style="height: 50px; padding: 6px 12px;"> -->
   <p class="help-block text-danger"></p>
    
 </div>
 <div class="col-md-6">
    <%= f.text_field :last_name, {class: "form-control", placeholder: "Last Name"} %>
   <!-- <input type="text" class="form-control" placeholder="Last Name" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>

 <div class="col-md-8">
    <%= f.text_field :street_address, {class: "form-control", placeholder: "Street Address"} %>
    <!-- <input type="text" class="form-control" placeholder="Street Address" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>

 <div class="col-md-4">
    <%= f.text_field :suite, {class: "form-control", placeholder: "Apt"} %>
    <!-- <input type="text" class="form-control" placeholder="Apt" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>


 <div class="col-md-4">
    <%= f.text_field :city, {class: "form-control", placeholder: "City"} %>
    <!-- <input type="text" class="form-control" placeholder="City" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>
    

 <div class="col-md-4">
    <%= f.text_field :state, {class: "form-control", placeholder: "State"} %>
    <!-- <input type="text" class="form-control" placeholder="New York" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>
    

 <div class="col-md-4">
    <%= f.text_field :zip, {class: "form-control", placeholder: "Zip"} %>
    <!-- <input type="text" class="form-control" placeholder="Zip" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>
    

 <div class="col-md-6">
    <%= f.text_field :phone, {class: "form-control", placeholder: "Phone Number"} %>
    <!-- <input type="text" class="form-control" placeholder="Phone Number" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>

 <div class="col-md-6">
    <%= f.email_field :email, {class: "form-control", placeholder: "Email"} %>
    <!-- <input type="text" class="form-control" placeholder="Email" id="name" required="" data-validation-required-message="Please enter your name." aria-invalid="false"> -->
   <p class="help-block text-danger"></p>
 </div>
  <div class="col-md-12">
    <%= submit_tag "Save changes", {class: "btn btn-primary"} %>
  </div>
</div>

<% end %>