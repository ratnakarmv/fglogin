<h1>Management panel</h1>

<%= form_tag(management_subscription_path, {method: "get", class: "form-horizontal", role: "form"}) do %>
<div class="form-group">
  <%= label_tag(:q, "Search for:", {class: "col-sm-2 control-label", for: "q"}) %>
  <div class="col-sm-10">
      <div class="input-group">
        <%= text_field_tag(:q, @query, {class: "form-control", placeholder: "Email"}) %>
        <span class="input-group-btn">
          <%= submit_tag("Search", class: "btn btn-primary") %>
        </span>
      </div>
    </div>
</div>
<% end %>
<hr>

<% if @subscription %>
  <%= render 'subscriptions_show' %>
<% else %>
  <% if @query.blank? %>
    <%= render 'customers_index' %>
  <% else %>
    
    No data for <%= @query %>
  <% end %>

<% end %>
  

